import org.openhab.core.library.types.*
import org.openhab.core.persistence.*
import org.openhab.model.script.actions.*
 
var Timer timer
 
rule "motionSwitchOn"
when
        Item Motion_Sensor_Hall changed from CLOSED to OPEN or
        Item Motion_Sensor_Landing changed from CLOSED to OPEN
then
		if (Auto_Away.state == ON)
		{
        	postUpdate(Auto_Away, OFF)
		}
        if(timer!=null) {
            timer.cancel
            timer = null
        }
end

rule "doorsOpened"
when
        Item Contact_FrontDoor changed from CLOSED to OPEN or
        Item Contact_BackDoor changed from CLOSED to OPEN
then
        timer = createTimer(now.plusSeconds(900)) [|
            if (Motion_Sensor_Hall.state == CLOSED && Motion_Sensor_Landing.state == CLOSED && Television_Alive.state == OFF && RichPhone_Alive.state == OFF) {
                postUpdate(Auto_Away, ON)
            }
        ]
end

